---
pages:
    - {name: About, url: /about}
    - {name: Projects, tag: project}
    - {name: Sounds, tag: sound}
    - {name: Works, tag: work}
    - {name: Contact, url: /contact, class: contact}
externalLinks:
    - {name: Facebook, url: https://www.facebook.com/mountfog}
    - {name: SoundCloud, url: https://soundcloud.com/mountfog}
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ metadata.title }} - {{ title or 'a Multidisciplinary Art Project' }}</title>
        <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
        <link rel="stylesheet" href="{{ '{{metadata.pathPrefix}}/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '{{metadata.pathPrefix}}/css/prism-base16-monokai.dark.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    </head>
    <body>
        <header></header>

        <div class=""></div>
        <div class="sidebar">
            <a href="{{ '/' | url }}"><img src="{{metadata.pathPrefix}}/img/mount_fog_logo.png" alt="We Know Nothing cover art" width="150px"/></a>
            <ul class="page-nav">
                {%- for page in pages -%}
                    <li class="page-item {{ page.class }}">
                        {% if page.url %}
                            <a href="{{ page.url | url }}">{{ page.name | upper }}</a>
                        {% elif page.tag %}
                            {{ page.name | upper }}
                            <ul class="{{ page.tag }}-nav">
                                {%- for innerPage in collections[page.tag] | sort(attribute = 'date', reverse=true) -%}
                                    <li class="{{ page.tag }}-item">
                                        <a href="{{ innerPage.url | url }}">{{ innerPage.data.title }}</a>
                                    </li>
                                {%- endfor -%}
                            </ul>
                        {% endif %}
                    </li>
                {%- endfor -%}
            </ul>
            <ul class="link-nav">
                {%- for link in externalLinks -%}
                    <li class="link-item">
                        <a href="{{ link.url | url }}">{{ link.name }}</a>
                    </li>
                {%- endfor -%}
            </ul>
        </div>

        <main>
            {{ content | safe }}
        </main>

        <footer></footer>
    </body>
</html>